{
  "name": "oyraa-api-server",
  "version": "0.0.1",
  "description": "oyraa-api-server",
  "author": "Konstant",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "build:apis": "npm run build apis",
    "format": "prettier --write \"apis/**/*.ts\" \"common/**/*.ts\"",
    "start:apis": "nest start apis",
    "start:dev:apis": "nest start apis --watch",
    "lint": "eslint \"{src,apis,common,test}/**/*.ts\" --fix"
  },
  "dependencies": {
    "@aws-sdk/client-sns": "^3.616.0",
    "@fast-csv/format": "^5.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mongoose": "^10.0.10",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-socket.io": "^10.3.10",
    "@nestjs/swagger": "^7.3.0",
    "@types/bcrypt": "^5.0.2",
    "@types/nodemailer": "^6.4.14",
    "agenda": "^5.0.0",
    "async": "^3.2.5",
    "aws-sdk": "^2.1663.0",
    "axios": "^1.7.2",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express-handlebars": "^7.1.2",
    "express-session": "^1.18.0",
    "ffmpeg": "^0.0.4",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "mongoose": "^8.2.2",
    "nestjs-agenda": "^2.0.0",
    "nestjs-i18n": "^10.4.5",
    "nodemailer": "^6.9.13",
    "nodemailer-sendgrid-transport": "^0.2.0",
    "socket.io": "^4.7.5",
    "stripe": "^15.1.0",
    "twilio": "^5.2.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/agenda": "^4.1.0",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.18.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "madge": "^7.0.0",
    "prettier": "^2.8.8",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apis/"
    ]
  }
